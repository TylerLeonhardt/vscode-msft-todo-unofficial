{
	"name": "msft-todo-unofficial",
	"displayName": "Microsoft To-Do (Unofficial)",
	"publisher": "tylerleonhardt",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:microsoft-todo-unoffcial.listView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "microsoft-todo-unoffcial.login",
				"title": "Login to Microsoft To-Do"
			},
			{
				"command": "microsoft-todo-unoffcial.refreshList",
				"title": "Refresh",
				"icon": {
					"dark": "./resources/dark/refresh.svg",
					"light": "./resources/light/refresh.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.complete",
				"title": "Complete task",
				"icon": {
					"dark": "./resources/dark/check.svg",
					"light": "./resources/light/check.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.uncomplete",
				"title": "Uncomplete task",
				"icon": {
					"dark": "./resources/dark/check.svg",
					"light": "./resources/light/check.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.star",
				"title": "Star task",
				"icon": {
					"dark": "./resources/dark/star-empty.svg",
					"light": "./resources/light/star-empty.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.unstar",
				"title": "Unstar task",
				"icon": {
					"dark": "./resources/dark/star-full.svg",
					"light": "./resources/light/star-full.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.createTask",
				"title": "Create a task",
				"icon": {
					"dark": "./resources/dark/add.svg",
					"light": "./resources/light/add.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.deleteTask",
				"title": "Delete task",
				"icon": {
					"dark": "./resources/dark/trash.svg",
					"light": "./resources/light/trash.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.createList",
				"title": "Create a list",
				"icon": {
					"dark": "./resources/dark/add.svg",
					"light": "./resources/light/add.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.deleteList",
				"title": "Delete list",
				"icon": {
					"dark": "./resources/dark/trash.svg",
					"light": "./resources/light/trash.svg"
				}
			},
			{
				"command": "microsoft-todo-unoffcial.openList",
				"title": "Open list"
			},
			{
				"command": "microsoft-todo-unofficial.toggleTask",
				"title": "Toggle task"
			}
		],
		"keybindings": [
			{
				"command": "microsoft-todo-unofficial.toggleTask",
				"key": "space",
				"when": "editorTextFocus && resourceScheme == microsoft-todo-unofficial"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "microsoft-todo-unoffcial",
					"title": "Microsoft To-Do (Unofficial)",
					"icon": "./resources/dark/checklist.svg"
				}
			]
		},
		"views": {
			"microsoft-todo-unoffcial": [
				{
					"id": "microsoft-todo-unoffcial.listView",
					"name": "Microsoft To-Do",
					"type": "tree",
					"visibility": "visible"
				},
				{
					"id": "microsoft-todo-unoffcial.taskDetailsView",
					"name": "Task details",
					"type": "webview",
					"visibility": "hidden",
					"when": "showTaskDetailsView",
					"contextualTitle": "To-Do Task details"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "microsoft-todo-unoffcial.listView",
				"contents": "Login to see your Microsoft To-Do lists.\n[Login](command:microsoft-todo-unoffcial.login)"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "microsoft-todo-unoffcial.refreshList",
					"when": "viewItem == list",
					"group": "inline@200"
				},
				{
					"command": "microsoft-todo-unoffcial.createTask",
					"when": "viewItem == list",
					"group": "inline@100"
				},
				{
					"command": "microsoft-todo-unoffcial.complete",
					"when": "viewItem =~ /task-notcompleted/",
					"group": "inline"
				},
				{
					"command": "microsoft-todo-unoffcial.uncomplete",
					"when": "viewItem =~ /task-completed/",
					"group": "inline"
				},
				{
					"command": "microsoft-todo-unoffcial.complete",
					"when": "viewItem =~ /task-notcompleted/",
					"group": "z_commands@100"
				},
				{
					"command": "microsoft-todo-unoffcial.uncomplete",
					"when": "viewItem =~ /task-completed/",
					"group": "z_commands@100"
				},
				{
					"command": "microsoft-todo-unoffcial.star",
					"when": "viewItem =~ /task-notstarred/",
					"group": "inline"
				},
				{
					"command": "microsoft-todo-unoffcial.unstar",
					"when": "viewItem =~ /task-starred/",
					"group": "inline"
				},
				{
					"command": "microsoft-todo-unoffcial.star",
					"when": "viewItem =~ /task-notstarred/",
					"group": "z_commands@200"
				},
				{
					"command": "microsoft-todo-unoffcial.unstar",
					"when": "viewItem =~ /task-starred/",
					"group": "z_commands@200"
				},
				{
					"command": "microsoft-todo-unoffcial.deleteTask",
					"when": "viewItem =~ /task/",
					"group": "z_commands@300"
				},
				{
					"command": "microsoft-todo-unoffcial.deleteList",
					"when": "viewItem == list",
					"group": "z_commands@200"
				},
				{
					"command": "microsoft-todo-unoffcial.openList",
					"when": "viewItem == list",
					"group": "z_commands@100"
				}
			],
			"view/title": [
				{
					"command": "microsoft-todo-unoffcial.refreshList",
					"group": "navigation"
				},
				{
					"command": "microsoft-todo-unoffcial.createTask",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@microsoft/microsoft-graph-types": "^1.28.0",
		"@types/glob": "^7.1.3",
		"@types/isomorphic-fetch": "^0.0.35",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/randombytes": "^2.0.0",
		"@types/uuid": "8.3.0",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@microsoft/microsoft-graph-client": "^2.2.1",
		"isomorphic-fetch": "^3.0.0",
		"moment": "^2.29.1",
		"moment-timezone": "^0.5.33",
		"tiny-date-picker": "^3.2.8",
		"keytar": "^7.6.0",
		"querystring": "^0.2.1",
		"randombytes": "^2.1.0",
		"uuid": "^8.3.2"
	}
}
